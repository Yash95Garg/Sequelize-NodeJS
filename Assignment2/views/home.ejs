<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Finstreet</title>
        <!-- CSS only -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
            crossorigin="anonymous"
        />
        <!-- JavaScript Bundle with Popper -->
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"
        ></script>
    </head>
    <body>
      <div class="container mr-auto mx-auto mt-auto row mx-md-n5" style="width: 100%; height: 100;">
        <table class="table align-middle">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Image</th>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
              <th scope="col">Total_orders</th>
              <th scope="col">CreatedAt</th>
              <th scope="col">last_logged_in</th>
              <th scope="col">Update</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            <% data.forEach(function(response){ %>      
            <tr>
              <th scope="row"><%= response.user_id %></th>
              <td><%= response.user_image %></td>
              <td><%= response.user_name %></td>
              <td><%= response.user_email %></td>
              <td><%= response.total_orders %></td>
              <td><%= response.createdAt %></td>
              <td><%= response.last_logged_in %></td>
              <td>
                <button type="button" class="btn btn-info btn-sm px-3">
                  <a href="/update" style="color: black;">Update</a>
                  <i class="fas fa-times"></i>
                </button>
              </td>
              <td>
                <button type="button" class="btn btn-danger btn-sm px-3" >
                  <a href="/delete/<%= response.user_id %>" style="color: black;">Delete</a>
                  <i class="fas fa-times"></i>
                </button>
              </td>
              <td>
                <button type="button" class="btn btn-success btn-sm px-3" >
                  <a href="/details/<%= response.user_id %>" style="color: black;">Details</a>
                  <i class="fas fa-times"></i>
                </button>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
        
    </body>
</html>









